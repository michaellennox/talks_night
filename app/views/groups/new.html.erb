<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">Claim Your Group's Space</h1>

        <%= form_with model: @group, local: true do |f| %>
          <div class="field">
            <%= f.label :name, class: "label" %>
            <div class="control">
              <%= f.text_field :name, class: "input", required: true %>
            </div>
            <%= field_errors_for @group, :name %>
          </div>

          <div class="field">
            <%= f.label :description, class: "label" %>
            <div class="control">
              <%= f.text_area :description, class: "textarea", required: true %>
            </div>
            <%= field_errors_for @group, :description %>
          </div>

          <div class="field">
            <div class="control">
              <%= f.submit "Create Space", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
